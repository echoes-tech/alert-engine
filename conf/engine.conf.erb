[engine]
id = 1
#mode
alerter = true
cleaner = true
calculator = true
#pause time between calculating alerts on new datas in milliseconds
sleep-alert-reading = 100
#pause time between checks to remove old values
sleep-remove-old-values = 3600000
sleep-calculate = 10

[database]
host = <%= db_host %>
port = 5432
dbname = <%= db_name %> 
username = <%= db_username %>
password = <%= db_password %>

[api]
host = <%= api_host %>
port = <%= api_port %>